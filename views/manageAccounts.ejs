<div class="row">
<div class="col-12">
    
    
       <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">URL</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      <% for(var i = 0 ;i < accounts.length ;i++){ %>
     
         <tr>
      <td ><%= accounts[i].userName %></td>
      <td><a href="https://<%= accounts[i].userProfile %>"><%= accounts[i].userName %> </a></td>
               <td><button type="button" class="btn btn-danger delete" id = "<%= accounts[i].id %>">delete</button></td>  
      
    </tr>
      
      <%  }   %>
 
   
