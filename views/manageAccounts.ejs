      <script>
  
          
$('.delete').click( function(){
                
        var $id = $(this).attr('id');
        var data = {id:$id};
        console.log(data);

        $.ajax({
        type: 'POST',
        url: '/delete',
        data: data,
        success: function(data){
            window.location.href = window.location.href;
        }
        });

        return false;

  });
          
          
      </script>
